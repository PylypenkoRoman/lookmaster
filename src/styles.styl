html,
body,
lm-root
  min-height: 100%
  display: flex
  flex: 1
  flex-direction: column

body
  font-family: 'FuturaPT-Medium'
  font-weight: normal
  font-style: normal
  font-stretch: normal
  line-height: 1
  background-color: #fff
  position: relative
  color: $black
  display: flex
  &.overflow-hidden
    overflow: hidden

.page-wrapper
  display: flex
  flex: 1
  flex-direction: column
  position: relative
  box-sizing: border-box
  padding: 0 25px
  width: 100%
  &.with-nav-bar
    padding-bottom: 50px
  &.with-bottom-button
    padding-bottom: 70px

.content
  flex: 1
  display: flex
  flex-direction: column
  box-sizing: border-box