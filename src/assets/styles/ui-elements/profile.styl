@import '../_variables.styl'

.profile
  &__header
    height: 330px
    position relative
    display: flex
    align-items: stretch
    &:before
      content: ""
      z-index 2
      left: 0
      right: 0
      top: 0
      bottom: 0
      position: absolute
      background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 40%,rgba(0,0,0,1) 100%);
  &__panel
    padding: 0 50px
    box-sizing: border-box
    position: absolute
    top: 0
    left:0
    right: 0
    height: 50px
    background: #fff
    z-index: 3
    display: flex
    align-items: center
    justify-content: center
    &.transparent
      background: transparent
      lm-svg-icon
        color: #fff
  &__panel-text
    font-size: 14px
    font-weight: 500
    letter-spacing: -0.2px
    text-align: center
    color: $black
  &__panel-btn
    height: 50px
    width: 50px
    border: 0
    display: flex
    cursor: pointer
    align-items: center
    justify-content: center
    padding: 0
    position: absolute
    cursor: pointer
    &.left
      left: 0
    &.right
      right: 0
    lm-svg-icon
      width: 20px
      height: 20px
      color: $black
      font-size: 20px
  &__wallpaper
    overflow: hidden
    flex: 1
  &__wallpaper-img
    display: block
    min-width: 100%
    height: 100%
  &__info
    z-index: 3
    position: absolute
    left: 0
    right: 0
    bottom: 0
    display: flex
    padding: 0 25px 38px
    flex-direction: column
  &__info-row
    display: flex
    justify-content space-between
    margin-bottom: 20px
    &.bottom
      align-items: flex-end
    &:last-child
      margin-bottom: 0
  &__city
    font-size: 14px
    font-weight: 500
    font-style: normal
    font-stretch: normal
    letter-spacing: -0.2px
    color: #fff
    margin-bottom: 10px
  &__name
    font-size: 26px
    font-weight: bold
    font-style: normal
    line-height: 1.15
    letter-spacing: -0.4px
    color: #fff
    margin: 0
    max-width: 70px
  &__subscribe-btn
    @extend .active-btn
    color: #fff
  &__portrait
    width: 60px
    height: 60px
    border-radius: 50%
    overflow: hidden
    position: relative
    lm-svg-icon
      color: #fff
      position: absolute
      z-index: 4
      left: 50%
      top: 50%
      margin-left: -17px
      margin-top: -17px
      width: 34px
      height: 34px
      font-size: 34px
  &__portrait-img
    display: block
    width: 100%
    height: 100%
  &__content
    padding: 0 25px
  &__section
    padding: 15px 25px
    margin: 0 -25px 25px
    border-bottom: 1px solid $beige
    box-sizing: border-box
  &__sub-title
    @extend .sub-title
    color: $red
    margin-bottom: 10px
  &__row
    padding: 20px 0
    border-bottom: 1px solid $beige
    align-items: center
    .text
      margin: 0
      line-height: 1.43
  &__portfolio-header
    display: flex
    justify-content: space-between
    align-items: center
  &__portfolio-title
    @extend .sub-title
    color: $red
  &__portfolio-all-btn
    @extend .active-btn
  .address
    margin-bottom: 25px
    &__row
      display: flex
      justify-content: space-between
      align-items: center
      padding: 20px 0
      border-bottom: 1px solid $beige
      line-height: 20px
    &__lable
      font-size: 20px
      letter-spacing: -0.2px
      color: $black
    &__info
      font-size: 14px
      font-weight: 500
      line-height: 1.0
      letter-spacing: -0.2px
      color: $gray

  .tag-list
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    margin-bottom: 15px

    &__item
      display: inline
      font-size: 12px
      font-weight: 500
      letter-spacing: -0.1px
      color: $gray-light
      margin-right: 10px
      text-overflow: ellipsis
      overflow: hidden
      white-space: nowrap
      &:last-child
        margin-right: 0


  .specialty
    display flex
    justify-content space-between
    &__item
      display: flex
      align-items center
      justify-content center
      flex-direction column
    &__img-wrapper
      width: 60px
      height: 60px
      margin-bottom: 6px
    &__img
      width: 100%
      hight: 100%
      display: block
    &__title
      font-size: 12px
      font-weight: 500
      letter-spacing: -0.1px
      color: $black
    &__more-btn
      font-family: FuturaPT-Book
      font-size: 26px
      letter-spacing: -0.2px
      text-align: center
      color: $red

  .specialty-edit
    &__header
      display: flex
      justify-content: space-between
      align-items: center
    &__title
      @extend .sub-title
      color: $red
    &__add-btn
      @extend .active-btn
      lm-svg-icon
    &__item
      padding: 18px 0
      border-bottom: 1px solid $beige
      display: flex
      justify-content: space-between
      align-items: center
    &__info
      display: flex
      justify-content: space-between
      align-items: center
    &__img-wrapper
      width: 26px
      height: 26px
      overflow: hidden
      margin-right: 15px
    &__img
      display: block
      width: 100%
      height: 100%
    &__item-title
      line-height 26px
      font-size: 20px
      font-weight: normal
      letter-spacing: -0.2px
      color: $black
    &__remove-btn
      lm-svg-icon
        color: $beige
        font-size: 20px
        cursor: pointer