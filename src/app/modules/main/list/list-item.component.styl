@import '../../../../assets/styles/_variables.styl'
.employee
  display: flex
  margin-bottom: 15px
  &__text-block
    background: gray 
    flex: 3
    display: flex
    align-items: center
  &__text
    color: #fff
    display: block
    box-sizing: border-box
    padding: 5px 10px
    align-items: center
  &__btn-group
    flex: 1
    display: flex
  .button
    flex: 1
  &__form
    .form-wrapper
      flex: 3
    .button
      flex: 1