@import '../../../../assets/styles/_variables.styl'

:host
  display: flex
  flex-direction: column
  flex: 1
.page-wrapper
  padding-left: 0
  padding-right: 0
  display: flex
  flex-direction: column
  flex: 1

.signup
  display: flex
  flex-direction: column
  flex: 1
  &__header
    display: flex
    justify-content: space-between
    height: 50px
    padding: 0 13px
    box-sizing: border-box
    flex: none
  &__controls
    display: flex
    justify-content: space-between
    align-items: center
    .login-btn
      width: 50px
      height: 50px
      font-size: 14px
      font-weight: 500
      line-height: 1.0
      letter-spacing: -0.2px
      text-align: left
      color: $black
      display: flex
      align-items: center
      justify-content: center
      text-decoration: none
  &__content
    display: flex 
    flex-direction: column
    align-items: center   
  &__form
      display: block
  &__title
    @extend .main-title
    text-align: center
    max-width: 210px
    margin: 0 auto 10px
  &__sub-title
    @extend .text
    text-align: center
    max-width: 210px
    margin: 0 auto
    line-height: 1.43
  &__button-group
    width: 200px
    margin: 65px auto 75px
    .button
      margin-bottom: 20px
      &:last-child
        margin-bottom: 0
  &__link
    @extend .text
    color: $gray
    text-align: center
    text-decoration: none 
    cursor: pointer   
  .form-control-wrapper
    margin 0 auto