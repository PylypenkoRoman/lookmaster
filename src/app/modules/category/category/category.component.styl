@import '../../../../assets/styles/_variables.styl'

:host
  flex: 1
  display: flex
  flex-direction: column
  .row
    margin-bottom: 20px
    &:last-child
      margin-bottom: 0

.category
  &__list
    display: flex
    margin: 0 -10px
    flex-wrap: wrap
    cursor: pointer
    list-style: none
    padding: 0
  &__item
    margin-bottom: 20px
    padding: 0 10px
    width: 50%
    box-sizing: border-box
  &__img-wrapper
    width: 100%
    height: 150px
    margin-bottom: 10px
  &__img
    display: block
    width: 100%
    height: 100%
  &__item-title
    margin: 0 0 4px
    @extend .text