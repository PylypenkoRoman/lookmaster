@import '../../../assets/styles/_variables.styl'

:host
  flex: 1
  display: flex
  flex-direction: column
  .page-wrapper
    padding-top: 25px
  .page-title
    margin-bottom: 10px
  .tabs
    position: relative
    left: -10px

.collections-placeholder
  padding: 30px 0 0
  box-sizing: border-box
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-between
  &__img-wrapper
    margin-bottom 25px
    width: 160px
    height: 160px
    border-radius: 50%
    overflow: hidden
  &__img
    width: 100%
    height: 100%
    display: block
  &__title
    @extend .main-title
    text-align: center
    margin-bottom: 10px
  &__text
    @extend .text
    line-height: 1.14
    text-align: center
    color: $gray
    max-width: 160px
    margin-bottom: 25px
  &__arrow
    height: 1px
    width: 1px
    border-top: 9px solid $red
    border-bottom: 9px solid transparent
    border-left: 6px solid transparent
    border-right: 6px solid transparent



