@import '../../../../assets/styles/_variables.styl'

:host
  flex: 1
  display: flex
.header
  display: flex
  align-items: center
.content
  padding 33px 0 20px
.edit-work
  &__counter
    padding-right: 50px
    flex: 1
    text-align: center
  &__img-wrapper
    height: 220px
    position: relative
    overflow: hidden
    margin-bottom: 25px
  &__img
    width: 100%
    height: auto
    display: block
  &__btn
    position: absolute
    right: 20px
    top: 20px
    width: 20px
    height: 20px
    font-size: 20px
    lm-svg-icon
      color: #fff

