@import '../../../../assets/styles/_variables.styl'

:host
  flex: 1
  display: flex
  .photos
    padding: 10px 0 5px
    margin: 0 -5px
    display: flex
    flex-wrap: wrap
    &__item
      width: 50%
      height: 130px
      padding: 0 5px
      box-sizing border-box
      margin-bottom: 10px
      position: relative
      cursor: pointer
      &.checked
        .photos__item-mark
          background: $red
          lm-svg-icon
            display block
    &__img
      display: block
      width: 100%
      height: 100%
    &__item-mark
      width: 22px
      height: 22px
      box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.15)
      border: solid 2px #ffffff
      box-sizing: border-box
      position: absolute
      display: flex
      justify-content: center
      align-items: center
      background: transparent
      top: 10px
      right: 10px
      border-radius: 50%
      transition
      lm-svg-icon
        color: #fff
        display: none
