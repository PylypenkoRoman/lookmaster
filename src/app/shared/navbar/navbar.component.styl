@import '../../../assets/styles/_variables.styl'

:host
  position: fixed
  bottom: 0
  left: 0
  right: 0
  background: #fff
  // display: none
  display block
  z-index: 100
  +respond-to(mobile-landscape)
    display block
  .nav-bar
    display: flex
    width: 100%
    height: 50px
    justify-content: space-between
    align-items: center
    &__item
      flex: 1
      display: flex
      align-items: center
      justify-content: center
      color: $gray
      // font-size: 0
      font-size: 16px
      user-select: none
      height: 100%
      lm-svg-icon
        font-size: 20px
      &:visited
        color: $gray
      &.active
        color: $black
        &:visited
          color: $black

.nav-bar__item
  background: green
  border: 4px solid white
  box-sizing: border-box