@import '../../../assets/styles/_variables.styl'

:host
  flex: none
  z-index: 100

  .mobile-sub-nav-btn
    display: none
    flex: 0 1 auto
    height: 50px
    width: 50px
    border: 0
    cursor: pointer
    align-items: center
    justify-content: center
    padding: 0
    position: relative
    +respond-to(mobile-landscape)
      display: flex
  .logo
    padding 0 30px
    margin-right: 30px
    cursor: pointer
    height: 70px
    font-weight: bold
    box-sizing: border-box
    +respond-to(desktop)
      order: 1
    +respond-to(mobile-landscape)
      height: 50px
      margin-right: 0
      display: none
    a
      display: flex
      height: 100%
      align-items: center
      justify-content: center
      text-decoration: none
      color: $black
      &:visited
        color: $black

.header
  background: #fff
  display: flex
  justify-content: space-between
  align-items: stretch
  border-bottom: solid 1px rgba(220, 220, 220, 0.5)
  flex-wrap: wrap
  position: relative
  box-sizing: border-box
  +respond-to(mobile-landscape)
    display: flex
    padding: 20px 25px 20px 10px
  &__controls
    display: flex
    justify-content: space-between
    align-items: center
    padding: 0 30px
    +respond-to(desktop)
      order: 2
    +respond-to(mobile-landscape)
      display: none
  &__sub-nav
    margin-right: 30px
    +respond-to(mobile-landscape)
      display: none
  &__sub-nav-item
    margin: 0 15px
    cursor: pointer
    color: $black
    text-decoration: none
    text-transform: none
    &:visited
      color: $black
    &:first-child
      margin-left: 0
    &:last-child
      margin-right: 0
  lm-search-box
    display: flex
    flex: 1
    +respond-to(desktop)
      order: 3
      min-width: 100%
      border-top: solid 1px rgba(220, 220, 220, 0.5)
    +respond-to(mobile-landscape)
      min-width: auto
      border: 0



.header.home-view
  border: 0
  background: transparent
  +respond-to(mobile-landscape)
    background: #fff
  lm-search-box
    display: none
    +respond-to(mobile-landscape)
      display: flex
  .logo a
    color: #fff
  .header__sub-nav-item
    color: #fff
  .header__controls
    .button.small.rounded
      background: #fff
      color: $black