@import '../../../assets/styles/_variables.styl'

:host
  flex: none
  background: #fff
.search-box
  display: flex
  justify-content: space-between
  width: 100%
  &__holder
    display: flex
    align-items: center
    border-left: 1px solid rgba(220, 220, 220, 0.5)
    border-right: 1px solid rgba(220, 220, 220, 0.5)
    box-sizing: border-box
    flex: none
    +respond-to(mobile-landscape)
      display: none
  &__button-holder
    align-items: center
    padding: 0 30px
    display: none
    .button
      background: $black
      color: #fff
      padding: 6px 27px
  &__search
    height: 70px
    position: relative
    flex: 1
    +respond-to(mobile-landscape)
      height: 50px
    input
      width: 100%
      border: 0
      font-size: 20px
      font-weight: 500
      font-style: normal
      font-stretch: normal
      line-height: 30px
      padding: 20px 20px 20px 60px
      letter-spacing: -0.3px
      text-align: left
      color: $black
      display: flex
      height: 100%
      font-family: 'FuturaPT-Medium'
      &:placeholder
        color: $gray-light
      +respond-to(mobile-landscape)
        background-color: #f2f2f2
        padding: 15px 15px 15px 45px
        font-size: 14px
        font-weight: 500
        line-height: 20px
        letter-spacing: -0.2px
        height: 50px
        text-align: left
        color: $black
    lm-svg-icon
      position: absolute
      width: 24px
      height: 24px
      left: 23px
      top: 50%
      font-size: 24px
      margin-top: -12px
      color: $gray-light
      +respond-to(mobile-landscape)
        width: 16px
        height: 16px
        left: 20px
        font-size: 16px
        margin-top: -8px
        color: $gray

.search-box__holder + .search-box__holder
  border-left: 0

.search-box.home-view
  max-width: 980px
  background: #fff
  margin: 0 auto
  .search-box__button-holder
    display: flex