@import '../../../assets/styles/_variables.styl'

:host
  margin: 0 -25px
  display: block
.work-card
  padding: 20px 25px
  box-sizing: border-box
  border-bottom: 1px solid $beige
  &.potfolio-view
    .work-card__header
      display: none
  &__header
    display: flex
    justify-content: space-between
    margin-bottom: 20px
  &__info
    display: flex
    align-items: center
    justify-content: space-between
  &__portrait-wrapper
    width: 30px
    height: 30px
    background-color: $beige
    border-radius: 50%
    overflow: hidden
    margin-right: 15px
  &__portrait
    width: 100%
    height: 100%
    display: block
  &__name
    font-size: 12px
    font-weight: 500
    letter-spacing: -0.2px
    color: $black
  &__subscribe-btn
    @extend .active-btn
  &__img-wrapper
    height: 220px
    position: relative
    overflow: hidden
  &__btn
    position: absolute
    right: 20px
    top: 20px
    width: 20px
    height: 20px
    font-size: 20px
    lm-svg-icon
      color: $red
  &__img
    width: 100%
    height: auto
    display: block
  &__footer
    margin-top: 20px
  &__title
    font-size: 14px
    font-weight: 500
    line-height: 1
    letter-spacing: -0.2px
    color: $black
    margin-bottom: 5px
  &__tag-list
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    max-width: 100%
    flex: none
  &__tag
    font-size: 12px
    font-weight: 500
    letter-spacing: -0.1px
    display: inline-block
    margin-right: 10px
    line-height: 16px
    color: $gray-light
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
